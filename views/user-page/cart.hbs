<div class="container">
    <table class="table mt-5">
        <thead>
            <tr>
                <th class="col">Item</th>
                <th class="col">Title</th>
                <th class="col">Price</th>
                <th class="col">Quantity</th>
                

            </tr>
        </thead>
    <tbody>

        {{#each products}}
        <tr>
        
            <td><img style="width: 70px; height: 70px;" src="/product-images/{{this.product._id}}.jpg" alt=""></td>
            <td>{{this.product.Name}}</td>
            <td>{{this.product.Price}}</td>
            
            <td>
                <button class="cart-item-count mr-3" onclick="changeQuantity('{{this._id}}','{{this.product._id}}','{{../users._id}}',-1)">-</button> {{!../users._id each inte akathu vere oru veriabilile data edukkan }}
                <span id="{{this.product._id}}">{{this.quantity}}</span>
                <button class="cart-item-count mr-3" onclick="changeQuantity('{{this._id}}','{{this.product._id}}','{{../users._id}}',1)">+</button> {{! ivide changeQuantity functionil edut cheyan pokunna cart id pass cheythu count cheyan pokunna product id yum nalki count cheyenda number}}
            </td>
            <td>
                <a href="/remove/?id={{this._id}}&cartid={{this.product._id}}" class="btn btn-danger">Remove</a>
            </td>
        </tr>

        {{/each}}


    </tbody>
    </table>
<hr>

    <h2 class="mt-4" style="float: right; margin-top: 100px;margin-right: 100px;">Total: Rs.<span id="totalValue">{{total}}</span></h2>

    <a href="/place-order" class="btn btn-success">place order</a>
</div>


