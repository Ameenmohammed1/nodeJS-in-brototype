

{{! card section }}
<section>
  <div class="container mt-5">
    <div class="row align-items-center">

      {{#each product}}
        <div class="col-md-3 p-3">
          <div
            class="card border border-dark d-flex justify-content-center flex-column"
            style="width: 15rem; height: 400px; display: flex; justify-content: center; align-items: center;"
          >
            <img
              class="card-img-top w-75 h-50"
              src="/product-images/{{this._id}}.jpg"
              alt="Card image cap"
              style="height: 160px; width: 300px;"
            />
            <div class="card-body d-flex justify-content-center flex-column">
              <h5 class="card-title text-success text-center">{{this.Name}}</h5>
              <h4 class="text-center">{{this.Category}}</h4>
              <p class="card-text text-center">{{this.Discriptin}}</p>
              <h4 class="text-center">{{this.Price}}</h4>
              {{!-- <a href="/add-to-cart?id={{this._id}}" class="btn btn-primary">Add to Cart</a> --}}

              <button class="btn btn-primary" onclick="addToCart('{{this._id}}')">Add to Cart</button>
            </div>
          </div>
        </div>
      {{/each}}

    </div>
  </div>
</section>
