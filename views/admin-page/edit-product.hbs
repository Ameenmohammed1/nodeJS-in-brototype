<div class="container mt-4">
<div class="row">
    <div class="col-md-6">
        <h2 class="text-center">Edit Product</h2>
        <form action="/admin/edit-product/?id={{product._id}}" method="post" enctype="multipart/form-data">{{! submit cheyumbol id kudi pass avum}}

            <label for="">Name</label>
            <input type="text" name="Name" class="form-control" value="{{product.Name}}">

            <label for="">Category</label>
            <input type="text" name="Category" class="form-control" value="{{product.Category}}">

            <label for="">Price</label>
            <input type="text" name="Price" class="form-control"  value="{{product.Price}}">

            <label for="">Discriptin</label>
            <input type="text" name="Discriptin" class="form-control"  value="{{product.Discriptin}}">

            <label for="">Image</label>
            <img src="/product-images/{{product._id}}.jpg" alt="" style="width: 100px; height: auto;" id="imgView">
            <input type="file" name="Image" class="form-control" onchange="viewImage(event)">

            <button type="submit" class="btn btn-success mt-4">Submit</button>

        </form>
    </div>
</div>
</div>


<script>
    function viewImage(event){
        document.getElementById('imgView').src=URL.createObjectURL(event.target.files[0])//ivide user select cheytha image img yil kanikkum
    }
</script>